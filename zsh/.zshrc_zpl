# 通过ctrl-z 由vim 进入shell, 并通过ctrl-z 退回shell
function fancy-ctrl-z {
  if [[ $#BUFFER -eq 0 ]]; then
      BUFFER="fg"
      zle accept-line
  else
	  zle push-input
	  zle clear-screen
  fi
}
zle -N fancy-ctrl-z
bindkey '^Z' fancy-ctrl-z


