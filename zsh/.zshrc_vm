function set_conda {
	# added by Anaconda3 5.3.1 installer
	# >>> conda init >>>
	# !! Contents within this block are managed by 'conda init' !!
	__conda_setup="$(CONDA_REPORT_ERRORS=false '/home/stout/anaconda3/bin/conda' shell.bash hook 2> /dev/null)"
	if [ $? -eq 0 ]; then
	    \eval "$__conda_setup"
	else
	    if [ -f "/home/stout/anaconda3/etc/profile.d/conda.sh" ]; then
# . "/home/stout/anaconda3/etc/profile.d/conda.sh"  # commented out by conda initialize
	        CONDA_CHANGEPS1=false conda activate base
	    else
	        \export PATH="/home/stout/anaconda3/bin:$PATH"
	    fi
	fi
	unset __conda_setup
	
	# <<< conda init <<<
	conda activate py36
}

function close_conda {
    conda deactivate
    conda deactivate
}

# 通过ctrl-z 由vim 进入shell, 并通过ctrl-z 退回shell
function fancy-ctrl-z {
  if [[ $#BUFFER -eq 0 ]]; then
      BUFFER="fg"
      zle accept-line
  else
	  zle push-input
	  zle clear-screen
  fi
}
zle -N fancy-ctrl-z
bindkey '^Z' fancy-ctrl-z

